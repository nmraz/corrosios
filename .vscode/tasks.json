{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make image",
      "group": "build",
      "type": "shell",
      "command": "cargo image",
      "problemMatcher": [],
    },
    {
      "label": "Make image (release)",
      "group": "build",
      "type": "shell",
      "command": "cargo image -- --release",
      "problemMatcher": [],
    },
    {
      "label": "Run in QEMU",
      "type": "shell",
      "command": "cargo qemu --firmware-path ${workspaceFolder}/qemu/firmware/x64/OVMF-pure-efi.fd",
      "problemMatcher": []
    },
    {
      "label": "Run in QEMU (gdbserver)",
      "type": "shell",
      "command": "cargo qemu --gdbserver --firmware-path ${workspaceFolder}/qemu/firmware/x64/OVMF-pure-efi.fd",
      "problemMatcher": []
    },
    {
      "label": "Run in QEMU (release)",
      "type": "shell",
      "command": "cargo qemu --firmware-path ${workspaceFolder}/qemu/firmware/x64/OVMF-pure-efi.fd -- --release",
      "problemMatcher": []
    }
  ]
}
